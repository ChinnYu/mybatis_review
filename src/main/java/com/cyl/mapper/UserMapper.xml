<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cyl.mapper.UserMapper">
    <!--自定義映射結果-->
    <resultMap id="userMap" type="user">
        <!--主鍵-->
        <id column="id" property="id"/>
        <!--其他普通字段-->
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="note" property="note"/>
        <result column="create_time" property="createTime"/>
        <result column="flag" property="flag"/>
    </resultMap>

    <select id="selectByUserName" parameterType="user" resultMap="userMap">
        select * from t_user where 1=1
        <if test="username != null and username != ''">
            and username = #{username}
        </if>
    </select>

    <select id="selectByUserName2" parameterType="user" resultMap="userMap">
        select * from t_user where 1=1
        <choose>
            <when test="id != null and id != 0">
                and id = #{id}
            </when>
            <when test="username != null and username != ''">
                and username = #{username}
            </when>
        </choose>
    </select>

    <select id="selectByUserName3" parameterType="user" resultMap="userMap">
        select * from t_user
        <where>
            <choose>
                <when test="id != null and id != 0">
                    and id = #{id}
                </when>
                <when test="username != null and username != ''">
                    and username = #{username}
                </when>
            </choose>
        </where>
    </select>

    <select id="selectByUserName4" parameterType="user" resultMap="userMap">
        select * from t_user
        <trim prefix="where" prefixOverrides="and">
            <choose>
                <when test="id != null and id != 0">
                    and id = #{id}
                </when>
                <when test="username != null and username != ''">
                    and username = #{username}
                </when>
            </choose>
        </trim>
    </select>

    <update id="updateUser" parameterType="user">
        update t_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="note != null and note != ''">
                note = #{note}
            </if>
        </set>
        where id =#{id}
    </update>

    <delete id="delByArray">
        delete from t_user where id in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <delete id="delByList">
        delete from t_user where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>